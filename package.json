{
  "name": "jbr",
  "version": "0.0.1",
  "author": "James Robb",
  "description": "James Robb's libraries",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesbrobb/jbr.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "publish": "npm run build-all-libraries && cd dist/libraries/@jamesbenrobb && npm publish ./core && npm publish ./ng && npm publish ./ts && npm publish ./types && npm publish ./ui",
    "types-tsd": "npx tsd libraries/types -f=src",
    "core-tsd": "npx tsd libraries/core -f=src",
    "readme": "cd $INIT_CWD && npx gitdown ./.README/README.tpl.md --output-file ./README.md",
    "ts-test-script": "ng build ts --configuration production && tsx ./scripts/ts-test-script.ts",
    "build-all-libraries-dev": "ng build types && ng build ts && ng build core && ng build ng && ng build ui",
    "serve-portfolio": "npm run build-all-libraries-dev && ng serve portfolio",
    "build-all-libraries": "ng build types --configuration production && ng build ts --configuration production && ng build core --configuration production && ng build ng --configuration production && ng build ui --configuration production",
    "build-portfolio": "npm run build-all-libraries && ng build portfolio --configuration production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.11",
    "@angular/cdk": "^16.1.1",
    "@angular/common": "^16.2.11",
    "@angular/compiler": "^16.2.11",
    "@angular/core": "^16.2.11",
    "@angular/forms": "^16.2.11",
    "@angular/material": "^16.1.1",
    "@angular/platform-browser": "^16.2.11",
    "@angular/platform-browser-dynamic": "^16.2.11",
    "@angular/router": "^16.2.11",
    "@juggle/resize-observer": "^3.4.0",
    "codemirror": "^5.65.13",
    "deepmerge": "^4.3.1",
    "json-beautify": "^1.1.1",
    "moment": "^2.29.4",
    "normalize.css": "^8.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.11",
    "@angular/cli": "~16.2.11",
    "@angular/compiler-cli": "^16.2.11",
    "@types/codemirror": "^5.60.8",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.3.1",
    "directory-tree": "^3.5.1",
    "gitdown": "^3.1.5",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^16.1.0",
    "tsd": "^0.28.1",
    "tsx": "^4.6.2",
    "typescript": "^5.1.6",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "tsd": {
    "directory": "./"
  }
}
